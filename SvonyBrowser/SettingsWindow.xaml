<Window x:Class="SvonyBrowser.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Svony Browser Settings" 
        Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="âš™ Settings" FontSize="20" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,20"/>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Server Settings -->
                <GroupBox Header="Server" Foreground="White" BorderBrush="#444" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="Default Server:" Foreground="#888" Margin="0,0,0,5"/>
                        <ComboBox x:Name="DefaultServerCombo" Width="200" HorizontalAlignment="Left">
                            <ComboBoxItem Content="cc1.evony.com"/>
                            <ComboBoxItem Content="cc2.evony.com"/>
                            <ComboBoxItem Content="cc3.evony.com"/>
                            <ComboBoxItem Content="cc4.evony.com"/>
                            <ComboBoxItem Content="cc5.evony.com"/>
                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                
                <!-- Proxy Settings -->
                <GroupBox Header="Proxy" Foreground="White" BorderBrush="#444" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Proxy Host:" Foreground="#888" Margin="0,0,0,5"/>
                                <TextBox x:Name="ProxyHostText" Width="200" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Port:" Foreground="#888" Margin="0,0,0,5"/>
                                <TextBox x:Name="ProxyPortText" Width="80"/>
                            </StackPanel>
                        </Grid>
                        <CheckBox x:Name="AutoStartFiddlerCheck" Content="Auto-start Fiddler" 
                                  Foreground="White" Margin="0,15,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- UI Settings -->
                <GroupBox Header="User Interface" Foreground="White" BorderBrush="#444" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="RememberLayoutCheck" Content="Remember panel layout" 
                                  Foreground="White" Margin="0,0,0,10"/>
                        <CheckBox x:Name="EnableLoggingCheck" Content="Enable debug logging" 
                                  Foreground="White"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Flash/SWF Settings -->
                <GroupBox Header="Flash SWF Files" Foreground="White" BorderBrush="#444" Margin="0,0,0,15">
                    <StackPanel Margin="10">
                        <TextBlock Text="AutoEvony.swf Path:" Foreground="#888" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="AutoEvonySwfPathText" Grid.Column="0" Margin="0,0,5,0"/>
                            <Button x:Name="BrowseAutoEvonyBtn" Grid.Column="1" Content="Browse..." 
                                    Width="70" Click="BrowseAutoEvony_Click"
                                    Background="#444" Foreground="White" BorderThickness="0" Padding="5,3"/>
                        </Grid>
                        
                        <TextBlock Text="EvonyClient.swf Path:" Foreground="#888" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="EvonyClientSwfPathText" Grid.Column="0" Margin="0,0,5,0"/>
                            <Button x:Name="BrowseEvonyClientBtn" Grid.Column="1" Content="Browse..." 
                                    Width="70" Click="BrowseEvonyClient_Click"
                                    Background="#444" Foreground="White" BorderThickness="0" Padding="5,3"/>
                        </Grid>
                        
                        <TextBlock Text="Flash Plugin Path (optional):" Foreground="#888" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FlashPluginPathText" Grid.Column="0" Margin="0,0,5,0"/>
                            <Button x:Name="BrowseFlashPluginBtn" Grid.Column="1" Content="Browse..." 
                                    Width="70" Click="BrowseFlashPlugin_Click"
                                    Background="#444" Foreground="White" BorderThickness="0" Padding="5,3"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Paths Info -->
                <GroupBox Header="Paths (Read-only)" Foreground="White" BorderBrush="#444">
                    <StackPanel Margin="10">
                        <TextBlock Text="Cache Path:" Foreground="#888"/>
                        <TextBox x:Name="CachePathText" IsReadOnly="True" Background="#2a2a2a" 
                                 Foreground="#88FF88" BorderThickness="0" Margin="0,0,0,10"/>
                        <TextBlock Text="Log Path:" Foreground="#888"/>
                        <TextBox x:Name="LogPathText" IsReadOnly="True" Background="#2a2a2a" 
                                 Foreground="#88FF88" BorderThickness="0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Click="Save_Click"
                    Background="#0078D4" Foreground="White" BorderThickness="0" Padding="10,8"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"
                    Background="#444" Foreground="White" BorderThickness="0" Padding="10,8"/>
        </StackPanel>
    </Grid>
</Window>
