# Svony Browser Environment Configuration
# Copy this file to .env and modify as needed

# ============================================
# Debug Settings
# ============================================
SVONY_DEBUG=false
SVONY_LOG_LEVEL=Info

# ============================================
# MCP Server Configuration
# ============================================
SVONY_MCP_SERVER_URL=http://localhost:3000
SVONY_MCP_RTE_URL=http://localhost:3001
SVONY_MCP_RAG_URL=http://localhost:3002

# ============================================
# LLM Configuration
# ============================================
SVONY_LLM_API_ENDPOINT=http://localhost:11434
SVONY_LLM_API_KEY=
SVONY_LLM_MODEL=llama3.2

# ============================================
# Fiddler/Proxy Configuration
# ============================================
SVONY_FIDDLER_PORT=8888
SVONY_FIDDLER_ENABLED=true

# ============================================
# Flash Plugin Configuration
# ============================================
SVONY_FLASH_PLUGIN_PATH=Assets/Plugins/pepflashplayer.dll
SVONY_CEFSHARP_PATH=Assets/CefSharp

# ============================================
# Game Server Configuration
# ============================================
SVONY_DEFAULT_SERVER=cc2.evony.com
SVONY_CUSTOM_SERVER_URL=

# ============================================
# Paths (optional - defaults will be used if not set)
# ============================================
# SVONY_DATA_PATH=
# SVONY_CACHE_PATH=
# SVONY_LOG_PATH=
# SVONY_CONFIG_PATH=

# ============================================
# Feature Flags
# ============================================
SVONY_ENABLE_TELEMETRY=false
SVONY_ENABLE_AUTO_UPDATE=true
SVONY_ENABLE_CRASH_REPORTS=true
