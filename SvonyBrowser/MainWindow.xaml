<Window x:Class="SvonyBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SvonyBrowser"
        xmlns:controls="clr-namespace:SvonyBrowser.Controls"
        mc:Ignorable="d"
        Title="Svony Browser - Evony Analysis Suite" 
        Height="900" Width="1600"
        MinHeight="600" MinWidth="1000"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F1A"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0F0F1A"/>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#0F0F1A"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SurfaceHighBrush" Color="#2D2D3D"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentGreenBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3D3D4D"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Item Style -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="content"
                                              ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceHighBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6D28D9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- TOOLBAR -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundMediumBrush}" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Panel View Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="View:" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button x:Name="BtnLeftOnly" Content="â—€ Bot Only" 
                            Click="ShowLeftOnly_Click" Style="{StaticResource ToolbarButton}"
                            ToolTip="Show AutoEvony panel only (Ctrl+1)"/>
                    <Button x:Name="BtnBothPanels" Content="â—€ Both â–¶" 
                            Click="ShowBoth_Click" Style="{StaticResource ToolbarButton}"
                            ToolTip="Show both panels (Ctrl+2)"/>
                    <Button x:Name="BtnRightOnly" Content="Client â–¶" 
                            Click="ShowRightOnly_Click" Style="{StaticResource ToolbarButton}"
                            ToolTip="Show Evony Client panel only (Ctrl+3)"/>
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,2"/>
                    <Button Content="â‡„ Swap" Click="SwapPanels_Click" 
                            Style="{StaticResource ToolbarButton}"
                            ToolTip="Swap left and right panels (Ctrl+S)"/>
                </StackPanel>
                
                <!-- Server Selection -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="Server:" Foreground="{StaticResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ServerSelector" Width="140" 
                              SelectionChanged="ServerSelector_SelectionChanged">
                        <ComboBoxItem Content="cc1.evony.com" Tag="cc1"/>
                        <ComboBoxItem Content="cc2.evony.com" Tag="cc2" IsSelected="True"/>
                        <ComboBoxItem Content="cc3.evony.com" Tag="cc3"/>
                        <ComboBoxItem Content="cc4.evony.com" Tag="cc4"/>
                        <ComboBoxItem Content="cc5.evony.com" Tag="cc5"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- Quick Actions -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="ðŸ”„ Reload Left" Click="ReloadLeft_Click" 
                            Style="{StaticResource ToolbarButton}" ToolTip="Reload AutoEvony (F5)"/>
                    <Button Content="ðŸ”„ Reload Right" Click="ReloadRight_Click" 
                            Style="{StaticResource ToolbarButton}" ToolTip="Reload Evony Client (F6)"/>
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,2"/>
                    <Button Content="ðŸ—‘ Clear Cache" Click="ClearCache_Click" 
                            Style="{StaticResource ToolbarButton}" 
                            ToolTip="Clear browser cache and cookies"/>
                </StackPanel>
                
                <!-- Tools -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="16,0,0,0">
                    <Button Content="ðŸ“ SOL Editor" Click="SolEditor_Click" 
                            Style="{StaticResource ToolbarButton}"
                            ToolTip="Open Flash SOL file editor"/>
                    <Button Content="ðŸ“Š Fiddler" Click="OpenFiddler_Click" 
                            Style="{StaticResource ToolbarButton}"
                            ToolTip="Open Fiddler traffic inspector"/>
                    <Button Content="âš™ Settings" Click="Settings_Click" 
                            Style="{StaticResource ToolbarButton}"
                            ToolTip="Application settings"/>
                </StackPanel>
                
                <!-- Status Indicators -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="16,0,0,0">
                    <Border x:Name="McpStatusIndicator"
                            Width="10" Height="10"
                            CornerRadius="5"
                            Background="{StaticResource WarningBrush}"
                            ToolTip="MCP Status: Connecting..."
                            Margin="0,0,8,0"/>
                    <Border x:Name="ProxyStatusIndicator"
                            Width="10" Height="10"
                            CornerRadius="5"
                            Background="{StaticResource TextSecondaryBrush}"
                            ToolTip="Proxy Status: Inactive"
                            Margin="0,0,8,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition x:Name="SidePanelColumn" Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Main Tab Control -->
            <TabControl Grid.Column="0"
                        Background="{StaticResource BackgroundBrush}"
                        BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource ModernTabItemStyle}"/>
                </TabControl.Resources>
                
                <!-- Browser Tab -->
                <TabItem Header="ðŸŒ Browser">
                    <Grid x:Name="ContentGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="LeftColumn" Width="*" MinWidth="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition x:Name="RightColumn" Width="*" MinWidth="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- LEFT PANEL: AutoEvony Bot -->
                        <Border Grid.Column="0" x:Name="LeftPanel" Background="{StaticResource BackgroundDarkBrush}" Margin="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="{StaticResource AccentGreenBrush}" Padding="10,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="ðŸŒ Left Panel" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                        <!-- Web/SWF Toggle for Left Panel -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Border x:Name="LeftWebToggle" Background="#FFFFFF" CornerRadius="4,0,0,4" Padding="8,4" Cursor="Hand" MouseLeftButtonDown="LeftWebToggle_Click">
                                                <TextBlock Text="Web" Foreground="#10B981" FontWeight="Bold" FontSize="11"/>
                                            </Border>
                                            <Border x:Name="LeftSwfToggle" Background="#2D2D3D" CornerRadius="0,4,4,0" Padding="8,4" Cursor="Hand" MouseLeftButtonDown="LeftSwfToggle_Click">
                                                <TextBlock Text="SWF" Foreground="#94A3B8" FontWeight="Medium" FontSize="11"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" x:Name="LeftStatusText" Text="" Foreground="#88FF88" 
                                                   HorizontalAlignment="Right" FontSize="11" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- LeftBrowser created in code-behind -->
                                <ContentControl Grid.Row="1" x:Name="LeftBrowserContainer"/>
                            </Grid>
                        </Border>
                        
                        <!-- GRID SPLITTER -->
                        <GridSplitter Grid.Column="1" 
                                     x:Name="PanelSplitter"
                                     Width="6" 
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Stretch"
                                     Background="{StaticResource BackgroundMediumBrush}"
                                     Cursor="SizeWE"
                                     ShowsPreview="True">
                            <GridSplitter.Template>
                                <ControlTemplate TargetType="GridSplitter">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                        <Rectangle Width="2" Height="30" Fill="#666" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </GridSplitter.Template>
                        </GridSplitter>
                        
                        <!-- RIGHT PANEL: Evony Client -->
                        <Border Grid.Column="2" x:Name="RightPanel" Background="{StaticResource BackgroundDarkBrush}" Margin="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Background="{StaticResource AccentBlueBrush}" Padding="10,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="ðŸŒ Right Panel" Foreground="White" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                        <!-- Web/SWF Toggle for Right Panel -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Border x:Name="RightWebToggle" Background="#FFFFFF" CornerRadius="4,0,0,4" Padding="8,4" Cursor="Hand" MouseLeftButtonDown="RightWebToggle_Click">
                                                <TextBlock Text="Web" Foreground="#3B82F6" FontWeight="Bold" FontSize="11"/>
                                            </Border>
                                            <Border x:Name="RightSwfToggle" Background="#2D2D3D" CornerRadius="0,4,4,0" Padding="8,4" Cursor="Hand" MouseLeftButtonDown="RightSwfToggle_Click">
                                                <TextBlock Text="SWF" Foreground="#94A3B8" FontWeight="Medium" FontSize="11"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" x:Name="RightStatusText" Text="" Foreground="#8888FF" 
                                                   HorizontalAlignment="Right" FontSize="11" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- RightBrowser created in code-behind -->
                                <ContentControl Grid.Row="1" x:Name="RightBrowserContainer"/>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                
                <!-- Traffic Tab -->
                <TabItem Header="ðŸ“¡ Traffic">
                    <controls:TrafficViewer x:Name="TrafficViewerControl"/>
                </TabItem>
                
                <!-- Protocol Tab -->
                <TabItem Header="ðŸ“‹ Protocol">
                    <controls:ProtocolExplorer x:Name="ProtocolExplorerControl"/>
                </TabItem>
                
                <!-- Tools Tab -->
                <TabItem Header="ðŸ”§ Tools">
                    <Grid Background="{StaticResource BackgroundBrush}">
                        <ScrollViewer Padding="24">
                            <StackPanel MaxWidth="800">
                                <!-- AMF Decoder -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="AMF3 Decoder"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,12"/>
                                        <TextBox x:Name="AmfInputTextBox"
                                                 Height="100"
                                                 Background="{StaticResource BackgroundBrush}"
                                                 Foreground="{StaticResource TextPrimaryBrush}"
                                                 BorderBrush="{StaticResource BorderBrush}"
                                                 Padding="12"
                                                 FontFamily="Consolas"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 VerticalScrollBarVisibility="Auto"/>
                                        <Button Content="Decode"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Click="DecodeAmf_Click"
                                                HorizontalAlignment="Left"
                                                Margin="0,12,0,12"/>
                                        <TextBox x:Name="AmfOutputTextBox"
                                                 Height="150"
                                                 IsReadOnly="True"
                                                 Background="{StaticResource BackgroundBrush}"
                                                 Foreground="{StaticResource SecondaryBrush}"
                                                 BorderBrush="{StaticResource BorderBrush}"
                                                 Padding="12"
                                                 FontFamily="Consolas"
                                                 TextWrapping="Wrap"
                                                 VerticalScrollBarVisibility="Auto"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Calculator -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Training Calculator"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,12"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                <TextBlock Text="Troop Type"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           Margin="0,0,0,4"/>
                                                <ComboBox x:Name="TroopTypeComboBox"
                                                          Background="{StaticResource BackgroundBrush}"
                                                          Padding="8">
                                                    <ComboBoxItem Content="Archer" IsSelected="True" Tag="a"/>
                                                    <ComboBoxItem Content="Cavalry" Tag="c"/>
                                                    <ComboBoxItem Content="Cataphract" Tag="cata"/>
                                                    <ComboBoxItem Content="Warrior" Tag="w"/>
                                                    <ComboBoxItem Content="Scout" Tag="s"/>
                                                    <ComboBoxItem Content="Pikeman" Tag="p"/>
                                                    <ComboBoxItem Content="Swordsman" Tag="sw"/>
                                                    <ComboBoxItem Content="Ballista" Tag="b"/>
                                                    <ComboBoxItem Content="Ram" Tag="r"/>
                                                    <ComboBoxItem Content="Catapult" Tag="cp"/>
                                                </ComboBox>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                <TextBlock Text="Amount"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12"
                                                           Margin="0,0,0,4"/>
                                                <TextBox x:Name="TroopAmountTextBox"
                                                         Text="10000"
                                                         Background="{StaticResource BackgroundBrush}"
                                                         Foreground="{StaticResource TextPrimaryBrush}"
                                                         BorderBrush="{StaticResource BorderBrush}"
                                                         Padding="8"/>
                                            </StackPanel>
                                        </Grid>
                                        <Button Content="Calculate"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Click="CalculateTraining_Click"
                                                HorizontalAlignment="Left"
                                                Margin="0,12,0,12"/>
                                        <TextBlock x:Name="CalculatorResultText"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- MCP Server Status -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="MCP Server Status"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,12"/>
                                        <ItemsControl x:Name="McpStatusList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Ellipse Width="8" Height="8" 
                                                                 Fill="{Binding StatusColor}"
                                                                 Margin="0,0,8,0"/>
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding Name}"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding Status}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <Button Content="Reconnect All"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Click="ReconnectMcp_Click"
                                                HorizontalAlignment="Left"
                                                Margin="0,12,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="4" 
                          HorizontalAlignment="Center"
                          Background="{StaticResource BorderBrush}"/>
            
            <!-- Side Panel - Chatbot -->
            <Border Grid.Column="2"
                    x:Name="SidePanel"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Panel Toggle -->
                    <Border Grid.Row="0"
                            Background="{StaticResource SurfaceHighBrush}"
                            Padding="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Button x:Name="TogglePanelButton"
                                    Content="â—€"
                                    Style="{StaticResource ToolbarButton}"
                                    Click="TogglePanel_Click"
                                    HorizontalAlignment="Left"
                                    Padding="8,4"/>
                            <TextBlock Text="Co-Pilot"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Chatbot Panel -->
                    <controls:ChatbotPanel Grid.Row="1" x:Name="ChatbotPanelControl"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- STATUS BAR -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundMediumBrush}" Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Connection Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="ConnectionIndicator" Width="10" Height="10" 
                             Fill="#FF4444" Margin="0,0,6,0"/>
                    <TextBlock x:Name="ConnectionStatus" Text="Disconnected" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <!-- Status Message -->
                <TextBlock Grid.Column="1" x:Name="StatusText" Text="Ready" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           Margin="20,0" TextTrimming="CharacterEllipsis"/>
                
                <!-- Traffic Count -->
                <TextBlock Grid.Column="2" x:Name="TrafficCountText" Text="Traffic: 0" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           Margin="10,0"/>
                
                <!-- Proxy Status -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="Proxy: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="ProxyStatus" Text="127.0.0.1:8888" Foreground="#88FFFF"/>
                </StackPanel>
                
                <!-- Session Info -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="Session: " Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="SessionStatus" Text="Shared" Foreground="#88FF88"/>
                </StackPanel>
                
                <!-- Panel Mode -->
                <TextBlock Grid.Column="5" x:Name="PanelModeText" Text="Both Panels" 
                           Foreground="{StaticResource TextSecondaryBrush}" Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
