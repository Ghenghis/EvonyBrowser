<UserControl x:Class="SvonyBrowser.Controls.ProtocolExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SvonyBrowser.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E2E">
    
    <UserControl.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#2D2D3D"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#94A3B8"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3D3D4D"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#10B981"/>
        
        <!-- TreeView Style -->
        <Style TargetType="TreeViewItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Categories & Actions -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search -->
            <Border Grid.Row="0" 
                    Background="{StaticResource SurfaceBrush}"
                    Padding="12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBox x:Name="SearchTextBox"
                             Background="{StaticResource BackgroundBrush}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             Padding="8,6"
                             TextChanged="SearchTextBox_TextChanged">
                    </TextBox>
                    <TextBlock Text="ðŸ” Search actions..."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               IsHitTestVisible="False"
                               Margin="12,6,0,0"
                               Visibility="{Binding Text.Length, ElementName=SearchTextBox, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                </Grid>
            </Border>
            
            <!-- Tree View -->
            <TreeView Grid.Row="1"
                      x:Name="ActionsTreeView"
                      Background="{StaticResource BackgroundBrush}"
                      BorderThickness="0"
                      Padding="8"
                      SelectedItemChanged="ActionsTreeView_SelectedItemChanged">
            </TreeView>
        </Grid>
        
        <!-- Splitter -->
        <GridSplitter Grid.Column="1" 
                      Width="4" 
                      HorizontalAlignment="Stretch"
                      Background="{StaticResource BorderBrush}"/>
        
        <!-- Right Panel - Details -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource SurfaceBrush}"
                    Padding="16,12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock x:Name="ActionNameText"
                               Text="Select an action"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    <TextBlock x:Name="ActionCategoryText"
                               Text=""
                               Foreground="{StaticResource AccentBrush}"
                               FontSize="12"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Details -->
            <ScrollViewer Grid.Row="1" Padding="16">
                <StackPanel x:Name="DetailsPanel" Visibility="Collapsed">
                    <!-- Description -->
                    <TextBlock Text="Description"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="DescriptionText"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>
                    
                    <!-- Command ID -->
                    <TextBlock Text="Command ID"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Border Background="{StaticResource SurfaceBrush}"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,0,0,20">
                        <TextBlock x:Name="CommandIdText"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontFamily="Consolas"
                                   FontSize="14"/>
                    </Border>
                    
                    <!-- Parameters -->
                    <TextBlock Text="Parameters"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Border Background="{StaticResource SurfaceBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,20">
                        <ItemsControl x:Name="ParametersItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontFamily="Consolas"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Type}"
                                                   Foreground="{StaticResource AccentBrush}"
                                                   FontFamily="Consolas"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                    
                    <!-- Example Request -->
                    <TextBlock Text="Example Request"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>
                    <Border Background="{StaticResource SurfaceBrush}"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,20">
                        <TextBox x:Name="ExampleRequestText"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 Background="Transparent"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Actions -->
            <Border Grid.Row="2"
                    Background="{StaticResource SurfaceBrush}"
                    Padding="16,12"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Copy to Clipboard"
                            Click="CopyToClipboard_Click"
                            Padding="16,8"
                            Margin="0,0,8,0"/>
                    <Button Content="Test in Chat"
                            Click="TestInChat_Click"
                            Padding="16,8"
                            Background="{StaticResource PrimaryBrush}"
                            Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
