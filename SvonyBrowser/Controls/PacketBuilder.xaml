<UserControl x:Class="SvonyBrowser.Controls.PacketBuilder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1E1E1E">
    
    <UserControl.Resources>
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>
        
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D5A8C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“¦" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="PACKET BUILDER" FontSize="16" FontWeight="Bold" 
                               Foreground="#E0E0E0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="SaveTemplateButton" Content="ðŸ’¾ Save Template" 
                            Style="{StaticResource ActionButton}" Margin="0,0,8,0"
                            Click="SaveTemplateButton_Click"/>
                    <Button x:Name="LoadTemplateButton" Content="ðŸ“‚ Load Template" 
                            Style="{StaticResource ActionButton}"
                            Click="LoadTemplateButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Action Selector -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Action:" Foreground="#B0B0B0" VerticalAlignment="Center" 
                           Margin="0,0,12,0"/>
                
                <ComboBox x:Name="ActionComboBox" Grid.Column="1" 
                          Style="{StaticResource DarkComboBox}"
                          SelectionChanged="ActionComboBox_SelectionChanged"
                          IsEditable="True"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0">
                    <TextBlock Text="Category:" Foreground="#B0B0B0" VerticalAlignment="Center" 
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="CategoryComboBox" Width="120" 
                              Style="{StaticResource DarkComboBox}"
                              SelectionChanged="CategoryComboBox_SelectionChanged">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="castle"/>
                        <ComboBoxItem Content="hero"/>
                        <ComboBoxItem Content="troop"/>
                        <ComboBoxItem Content="army"/>
                        <ComboBoxItem Content="march"/>
                        <ComboBoxItem Content="alliance"/>
                        <ComboBoxItem Content="shop"/>
                        <ComboBoxItem Content="tech"/>
                        <ComboBoxItem Content="quest"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Parameters Grid -->
        <Border Grid.Row="2" Margin="16,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Parameters" Foreground="#B0B0B0" FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>
                
                <Border Grid.Row="1" Background="#252526" CornerRadius="4">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ParametersItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="12,8" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Text="{Binding Name}" Foreground="#E0E0E0" 
                                                       VerticalAlignment="Center" FontWeight="Medium"/>
                                            
                                            <TextBox Grid.Column="1" Text="{Binding Value, Mode=TwoWay}"
                                                     Style="{StaticResource DarkTextBox}" Margin="8,0"/>
                                            
                                            <TextBlock Grid.Column="2" Text="{Binding DataType}" 
                                                       Foreground="#808080" VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="3" Text="{Binding Required}" 
                                                       Foreground="{Binding RequiredColor}" 
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        
        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#252526" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="AutoResponseCheckBox" Content="Capture Response" 
                              Foreground="#B0B0B0" VerticalAlignment="Center"/>
                    <CheckBox x:Name="MockResponseCheckBox" Content="Mock Response" 
                              Foreground="#B0B0B0" VerticalAlignment="Center" Margin="16,0,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" x:Name="ValidateButton" Content="âœ“ Validate" 
                        Style="{StaticResource ActionButton}" Background="#4D4D4D"
                        Click="ValidateButton_Click" Margin="0,0,8,0"/>
                
                <Button Grid.Column="2" x:Name="PreviewButton" Content="ðŸ‘ Preview" 
                        Style="{StaticResource ActionButton}" Background="#4D4D4D"
                        Click="PreviewButton_Click" Margin="0,0,8,0"/>
                
                <Button Grid.Column="3" x:Name="InjectButton" Content="ðŸš€ Inject Packet" 
                        Style="{StaticResource ActionButton}" Background="#388E3C"
                        Click="InjectButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Preview Panel -->
        <Border Grid.Row="4" Background="#1E1E1E" Margin="16,0,16,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Preview (AMF3)" Foreground="#B0B0B0" FontWeight="SemiBold"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <RadioButton x:Name="HexViewRadio" Content="Hex" Foreground="#B0B0B0" 
                                     IsChecked="True" Checked="ViewModeChanged"/>
                        <RadioButton x:Name="JsonViewRadio" Content="JSON" Foreground="#B0B0B0" 
                                     Margin="12,0,0,0" Checked="ViewModeChanged"/>
                    </StackPanel>
                </Grid>
                
                <Border Grid.Row="1" Background="#252526" CornerRadius="4" Padding="8">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="PreviewTextBlock" FontFamily="Consolas" FontSize="12"
                                   Foreground="#9CDCFE" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
